<UserControl x:Class="ADVT_ERP.BillReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADVT_ERP"
             mc:Ignorable="d" 
             d:DesignHeight="570" d:DesignWidth="990" Width="990" Height="570">
    <Grid Background="#FFF9F9F9">
        <Label Content="Ag. Type" HorizontalAlignment="Left" Margin="478,41,0,0" VerticalAlignment="Top" Height="26" Width="61"/>
        <RadioButton x:Name="rdoAgencyType_C" Content="Comm" HorizontalAlignment="Left" Margin="538,49,0,0" VerticalAlignment="Top" GroupName="AgencyType" IsChecked="True" Height="15" Width="63" Checked="rdoAgencyType_C_Checked" TabIndex="7"/>
        <RadioButton x:Name="rdoAgencyType_G" Content="Govt" HorizontalAlignment="Left" Margin="599,51,0,0" VerticalAlignment="Top" GroupName="AgencyType" Height="15" Width="64" Checked="rdoAgencyType_G_Checked" TabIndex="8"/>
        <Label Content="Bill Report" HorizontalAlignment="Left" Margin="55,5,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Height="31" Width="170"/>
        <Image HorizontalAlignment="Left" Height="29" Margin="16,5,0,0" VerticalAlignment="Top" Width="31" Source="Resources/dailyreport.png"/>
        <Label Content="District" HorizontalAlignment="Left" Margin="17,41,0,0" VerticalAlignment="Top" Height="26" Width="47"/>
        <ComboBox x:Name="drpDistrictList" HorizontalAlignment="Left" Margin="87,45,0,0" VerticalAlignment="Top" Width="149" SelectionChanged="drpDistrictList_SelectionChanged" Height="22" TabIndex="5"/>
        <Label Content="Location" HorizontalAlignment="Left" Margin="257,41,0,0" VerticalAlignment="Top" Height="26" Width="55" RenderTransformOrigin="1.182,-1.308"/>
        <ComboBox x:Name="drpLocationList" HorizontalAlignment="Left" Margin="313,45,0,0" VerticalAlignment="Top" Width="143" Height="22" SelectionChanged="drpLocationList_SelectionChanged" TabIndex="6"/>
        <Button x:Name="btnApplyFilter" Content="Apply Filter" HorizontalAlignment="Left" Margin="766,78,0,0" VerticalAlignment="Top" Width="107" Height="28" FontWeight="Bold" Click="btnApplyFilter_Click" TabIndex="22"/>
        <Label Content="Agency" HorizontalAlignment="Left" Margin="669,43,0,0" VerticalAlignment="Top" Height="26" Width="55"/>
        <ComboBox x:Name="drpAgencyList" HorizontalAlignment="Left" Margin="726,45,0,0" VerticalAlignment="Top" Width="254" Height="22" TabIndex="9"/>
        <DataGrid x:Name="grdInvoiceList" Margin="6,127,10,4" IsTextSearchEnabled="True" ColumnHeaderHeight="25" AlternatingRowBackground="#FFEEEAEA" ColumnWidth="*" IsReadOnly="True" >
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Action" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="btnPrint" Content="Print" Click="btnPrint_Click" Margin="2" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Print" Click="btnPrint_Click" />
                    <MenuItem Header="Cancel" Click="btnCancel_Click" />
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        <Label Content="Executive" HorizontalAlignment="Left" Margin="480,81,0,0" VerticalAlignment="Top" Height="26" Width="66"/>
        <ComboBox x:Name="drpExecutiveList" HorizontalAlignment="Left" Margin="552,81,0,0" VerticalAlignment="Top" Width="172" Height="22" TabIndex="11"/>
        <Label Content="From Date" HorizontalAlignment="Left" Margin="19,80,0,0" VerticalAlignment="Top" Height="26" Width="76"/>
        <Label Content="To Date" HorizontalAlignment="Left" Margin="259,80,0,0" VerticalAlignment="Top" Height="26" Width="56"/>
        <DatePicker x:Name="dpkrInvoiceDateFrom" HorizontalAlignment="Left" Margin="89,82,0,0" VerticalAlignment="Top" Width="149" Height="24" TabIndex="2"/>
        <DatePicker x:Name="dpkrInvoiceDateTo" HorizontalAlignment="Left" Margin="315,82,0,0" VerticalAlignment="Top" Width="144" Height="24" TabIndex="3"/>
        <Button x:Name="btnExport" Content="Export" HorizontalAlignment="Left" Margin="892,78,0,0" VerticalAlignment="Top" Width="88" Height="28" FontWeight="Bold" TabIndex="22" Click="btnExport_Click"/>
    </Grid>
</UserControl>
