        </RichTextBox>
        <Button x:Name="btnCancelInvoice" Content="Cancel This Invoice" HorizontalAlignment="Left" Margin="617,271,0,0" VerticalAlignment="Top" Width="167" Height="35" FontWeight="Bold" FontSize="15" Click="btnCancelInvoice_Click"/>
        <Label Content="Cancelation Remark" HorizontalAlignment="Left" Margin="12,139,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblInvoiceNo" Content="------------" HorizontalAlignment="Left" Margin="86,46,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="163"/>
