        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADVT_ERP"
        mc:Ignorable="d"
        Title="Cancel Invoice" Height="361" Width="818" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Invoice Cancelation" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="160" FontSize="16" FontWeight="Bold"/>
        <Label Content="Invoice No." HorizontalAlignment="Left" Margin="12,46,0,0" VerticalAlignment="Top"/>
        <Label Content="Agency" HorizontalAlignment="Left" Margin="14,76,0,0" VerticalAlignment="Top"/>
        <Label Content="Amount" HorizontalAlignment="Left" Margin="495,84,0,0" VerticalAlignment="Top"/>
        <Label Content="Invoice Date" HorizontalAlignment="Left" Margin="264,46,0,0" VerticalAlignment="Top"/>
        <Label Content="Publish Date" HorizontalAlignment="Left" Margin="495,46,0,0" VerticalAlignment="Top"/>
        <Label Content="Client" HorizontalAlignment="Left" Margin="14,110,0,0" VerticalAlignment="Top"/>
        <RichTextBox x:Name="txtCancelRemark" Height="83" Margin="14,171,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="770">
