        <Label x:Name="lblPublishDate" Content="------------" HorizontalAlignment="Left" Margin="576,46,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="190"/>
        <Label x:Name="lblAmount" Content="------------" HorizontalAlignment="Left" Margin="576,84,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="190"/>

    </Grid>
</Window>
