<UserControl x:Class="ADVT_ERP.CompanyProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADVT_ERP"
             mc:Ignorable="d" 
             d:DesignHeight="570" d:DesignWidth="990" Width="990" Height="570">
    <Grid Background="#FFF9F9F9">
        <GroupBox Header="Business Information" HorizontalAlignment="Left" Height="104" Margin="16,208,0,0" VerticalAlignment="Top" Width="849" Foreground="#FF9C9898" FontWeight="Bold"/>
        <GroupBox Header="Basic Information" HorizontalAlignment="Left" Height="147" Margin="16,56,0,0" VerticalAlignment="Top" Width="849" Foreground="#FF9C9898" FontWeight="Bold">
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="94" Margin="738,0,0,0" VerticalAlignment="Top" Width="94"/>
        </GroupBox>
        <GroupBox Header="Bank Details" HorizontalAlignment="Left" Height="139" Margin="16,320,0,0" VerticalAlignment="Top" Width="849" Foreground="#FF9C9898" FontWeight="Bold"/>
        <Label Content="Company Name" HorizontalAlignment="Left" Margin="31,75,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="762,474,0,0" VerticalAlignment="Top" Width="103" Height="28" Click="btnSave_Click" FontWeight="Bold" TabIndex="13"/>
        <TextBox x:Name="txtCompanyName" HorizontalAlignment="Left" Height="23" Margin="131,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="601" TabIndex="1"/>
        <Label Content="Address" HorizontalAlignment="Left" Margin="31,117,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Height="23" Margin="131,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="601" TabIndex="2"/>
        <Label Content="Manage Company Profile" HorizontalAlignment="Left" Margin="51,4,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Image HorizontalAlignment="Left" Height="36" Margin="10,5,0,0" VerticalAlignment="Top" Width="39" Source="Resources/company-profile.png"/>
        <Label Content="GSTN" HorizontalAlignment="Left" Margin="462,232,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtGSTN" HorizontalAlignment="Left" Height="23" Margin="540,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304" TabIndex="6"/>
        <Label Content="PAN" HorizontalAlignment="Left" Margin="32,232,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPAN" HorizontalAlignment="Left" Height="23" Margin="131,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="306" TabIndex="5"/>
        <Label Content="Bank Name" HorizontalAlignment="Left" Margin="460,351,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBankName" HorizontalAlignment="Left" Height="23" Margin="540,354,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304" TabIndex="10"/>
        <Label Content="A/C Holder" HorizontalAlignment="Left" Margin="31,354,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtACHolder" HorizontalAlignment="Left" Height="23" Margin="131,354,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="306" TabIndex="9"/>
        <Label Content="DPR Code" HorizontalAlignment="Left" Margin="462,267,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDprCode" HorizontalAlignment="Left" Height="23" Margin="540,270,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304" TabIndex="8"/>
        <Label Content="DAVP Code" HorizontalAlignment="Left" Margin="32,263,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDavpCode" HorizontalAlignment="Left" Height="23" Margin="131,271,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="306" TabIndex="7"/>
        <Label Content="A/C Number" HorizontalAlignment="Left" Margin="460,398,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtACNum" HorizontalAlignment="Left" Height="23" Margin="540,401,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304" TabIndex="12"/>
        <Label Content="IFSC" HorizontalAlignment="Left" Margin="31,401,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtIFSC" HorizontalAlignment="Left" Height="23" Margin="131,401,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="306" TabIndex="11"/>
        <Label Content="Contact No." HorizontalAlignment="Left" Margin="395,159,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtContactNum" HorizontalAlignment="Left" Height="23" Margin="480,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="252" TabIndex="4"/>
        <Label Content="Email Id" HorizontalAlignment="Left" Margin="32,158,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmailId" HorizontalAlignment="Left" Height="23" Margin="131,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" TabIndex="3"/>
        <Button x:Name="btnBrowseLogo" Content="Select Logo" HorizontalAlignment="Left" Margin="759,171,0,0" VerticalAlignment="Top" Width="70" Click="btnBrowseLogo_Click"/>
        <Image x:Name="imgLogo" HorizontalAlignment="Left" Height="90" Margin="762,75,0,0" VerticalAlignment="Top" Width="90"/>
        <TextBox x:Name="txtLogoTempPath_hidden" HorizontalAlignment="Left" Height="23" Margin="917,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="41" Visibility="Hidden"/>
        <TextBox x:Name="txtLogoPath_hidden" HorizontalAlignment="Left" Height="23" Margin="917,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="41" Visibility="Hidden"/>
        <Button x:Name="btnRemoveLogo" Content="X" HorizontalAlignment="Left" Margin="835,171,0,0" VerticalAlignment="Top" Width="20" Click="btnRemoveLogo_Click"/>
    </Grid>
</UserControl>
