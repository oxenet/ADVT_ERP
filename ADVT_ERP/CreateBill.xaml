<UserControl x:Class="ADVT_ERP.CreateBill"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADVT_ERP"
             mc:Ignorable="d" 
             d:DesignHeight="570" d:DesignWidth="990" Width="990" Height="570">
    <Grid Background="#FFF9F9F9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Amount" HorizontalAlignment="Left" Margin="21,198,0,0" VerticalAlignment="Top" Height="26" Width="69"/>
        <TextBox x:Name="txtAmount" HorizontalAlignment="Left" Height="23" Margin="95,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159" TabIndex="16" HorizontalContentAlignment="Right" TextChanged="txtAmount_TextChanged" PreviewTextInput="txtAmount_PreviewTextInput"/>
        <Label Content="Invoice No." HorizontalAlignment="Left" Margin="20,52,0,0" VerticalAlignment="Top" Height="26" Width="69"/>
        <Label Content="Ad Hight" HorizontalAlignment="Left" Margin="20,164,0,0" VerticalAlignment="Top" Height="26" Width="63"/>
        <Label Content="Ag. Type" HorizontalAlignment="Left" Margin="734,88,0,0" VerticalAlignment="Top" Height="26" Width="86"/>
        <TextBox x:Name="txtInvoiceNo" HorizontalAlignment="Left" Height="23" Margin="94,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" IsReadOnly="True" TabIndex="1"/>
        <TextBox x:Name="txtAdHeight" HorizontalAlignment="Left" Height="23" Margin="94,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" TabIndex="12" HorizontalContentAlignment="Right" TextChanged="txtAdHeight_TextChanged" PreviewTextInput="txtAdHeight_PreviewTextInput"/>
        <RadioButton x:Name="rdoAgencyType_C" Content="Comm" HorizontalAlignment="Left" Margin="800,94,0,0" VerticalAlignment="Top" GroupName="AgencyType" IsChecked="True" Height="15" Width="63" Checked="rdoAgencyType_C_Checked" TabIndex="7"/>
        <RadioButton x:Name="rdoAgencyType_G" Content="Govt" HorizontalAlignment="Left" Margin="868,94,0,0" VerticalAlignment="Top" GroupName="AgencyType" Height="15" Width="64" Checked="rdoAgencyType_G_Checked" TabIndex="8"/>
        <Label Content="Create Invoice" HorizontalAlignment="Left" Margin="55,5,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Height="31" Width="117"/>
        <Image HorizontalAlignment="Left" Height="29" Margin="16,5,0,0" VerticalAlignment="Top" Width="31" Source="Resources/cash-register.png"/>
        <Label Content="District" HorizontalAlignment="Left" Margin="23,88,0,0" VerticalAlignment="Top" Height="26" Width="47"/>
        <ComboBox x:Name="drpDistrictList" HorizontalAlignment="Left" Margin="95,91,0,0" VerticalAlignment="Top" Width="398" SelectionChanged="drpDistrictList_SelectionChanged" Height="22" TabIndex="5"/>
        <Label Content="Location" HorizontalAlignment="Left" Margin="502,87,0,0" VerticalAlignment="Top" Height="26" Width="55"/>
        <ComboBox x:Name="drpLocationList" HorizontalAlignment="Left" Margin="581,91,0,0" VerticalAlignment="Top" Width="143" Height="22" SelectionChanged="drpLocationList_SelectionChanged" TabIndex="6"/>
        <Label Content="Client" HorizontalAlignment="Left" Margin="265,127,0,0" VerticalAlignment="Top" Height="26" Width="73"/>
        <TextBox x:Name="txtClientName" HorizontalAlignment="Left" Height="23" Margin="344,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" TabIndex="10"/>
        <Label Content="Ad Width" HorizontalAlignment="Left" Margin="267,163,0,0" VerticalAlignment="Top" Height="26" Width="71"/>
        <TextBox x:Name="txtAdWidth" HorizontalAlignment="Left" Height="23" Margin="344,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" TabIndex="13" HorizontalContentAlignment="Right" TextChanged="txtAdWidth_TextChanged" PreviewTextInput="txtAdWidth_PreviewTextInput"/>
        <Label Content="Ad Space" HorizontalAlignment="Left" Margin="502,163,0,0" VerticalAlignment="Top" Height="26" Width="66"/>
        <TextBox x:Name="txtAdSpace" HorizontalAlignment="Left" Height="23" Margin="581,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143" TabIndex="14" HorizontalContentAlignment="Right" IsReadOnly="True"/>
        <Label Content="Rate" HorizontalAlignment="Left" Margin="743,161,0,0" VerticalAlignment="Top" Height="26" Width="49"/>
        <TextBox x:Name="txtRate" HorizontalAlignment="Left" Height="23" Margin="800,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" TabIndex="15" HorizontalContentAlignment="Right" TextChanged="txtRate_TextChanged" PreviewTextInput="txtRate_PreviewTextInput"/>
        <Label Content="Agrd Amnt" HorizontalAlignment="Left" Margin="267,198,0,0" VerticalAlignment="Top" Height="26" Width="71"/>
        <TextBox x:Name="txtAgreedAmount" HorizontalAlignment="Left" Height="23" Margin="344,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" TabIndex="17" TextChanged="txtAgreedAmount_TextChanged" HorizontalContentAlignment="Right" PreviewTextInput="txtAgreedAmount_PreviewTextInput"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="879,276,0,0" VerticalAlignment="Top" Width="89" Height="28" FontWeight="Bold" Click="btnSave_Click" TabIndex="22"/>
        <TextBox x:Name="txtPK_hidden" HorizontalAlignment="Left" Height="23" Margin="952,51,-3,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="41" Visibility="Hidden"/>
        <Label Content="Invoice Date" HorizontalAlignment="Left" Margin="262,50,0,0" VerticalAlignment="Top" Height="26" Width="76"/>
        <Label Content="Publish Date" HorizontalAlignment="Left" Margin="502,50,0,0" VerticalAlignment="Top" Height="26" Width="76"/>
        <Label Content="RO Num." HorizontalAlignment="Left" Margin="734,50,0,0" VerticalAlignment="Top" Height="26" Width="58"/>
        <DatePicker x:Name="dpkrInvoiceDate" HorizontalAlignment="Left" Margin="344,52,0,0" VerticalAlignment="Top" Width="149" Height="24" TabIndex="2" SelectedDateChanged="dpkrInvoiceDate_SelectedDateChanged"/>
        <DatePicker x:Name="dpkrPublishDate" HorizontalAlignment="Left" Margin="580,52,0,0" VerticalAlignment="Top" Width="144" Height="24" TabIndex="3"/>
        <TextBox x:Name="txtRONum" HorizontalAlignment="Left" Height="23" Margin="794,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="174" TabIndex="4"/>
        <Label Content="Agency" HorizontalAlignment="Left" Margin="23,125,0,0" VerticalAlignment="Top" Height="26" Width="55"/>
        <ComboBox x:Name="drpAgencyList" HorizontalAlignment="Left" Margin="94,129,0,0" VerticalAlignment="Top" Width="160" Height="22" TabIndex="9"/>
        <Label Content="Executive" HorizontalAlignment="Left" Margin="737,125,0,0" VerticalAlignment="Top" Height="26" Width="66"/>
        <ComboBox x:Name="drpExecutiveList" HorizontalAlignment="Left" Margin="800,128,0,0" VerticalAlignment="Top" Width="168" Height="22" TabIndex="11"/>
        <Label Content="CGST" HorizontalAlignment="Left" Margin="502,198,0,0" VerticalAlignment="Top" Height="26" Width="66"/>
        <TextBox x:Name="txtCGST" HorizontalAlignment="Left" Height="23" Margin="581,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" TabIndex="18" IsReadOnly="True" HorizontalContentAlignment="Right"/>
        <Label Content="SGST" HorizontalAlignment="Left" Margin="743,196,0,0" VerticalAlignment="Top" Height="26" Width="49"/>
        <TextBox x:Name="txtSGST" HorizontalAlignment="Left" Height="23" Margin="800,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" TabIndex="19" IsReadOnly="True" HorizontalContentAlignment="Right"/>
        <Label Content="Net Amt" HorizontalAlignment="Left" Margin="21,235,0,0" VerticalAlignment="Top" Height="26" Width="69"/>
        <TextBox x:Name="txtNetAmount" HorizontalAlignment="Left" Height="23" Margin="95,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159" TabIndex="20" HorizontalContentAlignment="Right" TextChanged="txtNetAmount_TextChanged" PreviewTextInput="txtNetAmount_PreviewTextInput"/>
        <Label Content="Remark" HorizontalAlignment="Left" Margin="270,235,0,0" VerticalAlignment="Top" Height="26" Width="69"/>
        <TextBox x:Name="txtRemark" HorizontalAlignment="Left" Height="23" Margin="344,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="624" TabIndex="21"/>
        <DataGrid x:Name="grdInvoiceList" Margin="6,321,10,4" IsTextSearchEnabled="True" ColumnHeaderHeight="25" AlternatingRowBackground="#FFEEEAEA" ColumnWidth="*" IsReadOnly="True" MouseDoubleClick="grdInvoiceList_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Action" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="btnPrint" Content="Print" Click="btnPrint_Click" Margin="2" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Print" Click="btnPrint_Click" />
                    <MenuItem Header="Cancel" Click="btnCancel_Click" />
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        <Label x:Name="lblCGST" Content="0.0" HorizontalAlignment="Left" Margin="658,196,0,0" VerticalAlignment="Top" Height="26" Width="49" HorizontalContentAlignment="Right"/>
        <Label Content="%" HorizontalAlignment="Left" Margin="707,196,0,0" VerticalAlignment="Top" Height="26" Width="31"/>
        <Label x:Name="lblSGST" Content="0.0" HorizontalAlignment="Left" Margin="885,197,0,0" VerticalAlignment="Top" Height="26" Width="61" HorizontalContentAlignment="Right"/>
        <Label Content="%" HorizontalAlignment="Left" Margin="949,196,0,0" VerticalAlignment="Top" Height="26" Width="31"/>
        <Button x:Name="btnNew" Content="New/Reset Form" HorizontalAlignment="Left" Margin="707,276,0,0" VerticalAlignment="Top" Width="125" Height="28" FontWeight="Bold" Click="btnNew_Click"/>
    </Grid>
</UserControl>
