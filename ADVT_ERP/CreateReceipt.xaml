<UserControl x:Class="ADVT_ERP.CreateReceipt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADVT_ERP"
             mc:Ignorable="d" 
             d:DesignHeight="570" d:DesignWidth="990" Width="990" Height="570">
    <Grid Background="#FFF9F9F9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Receipt No." HorizontalAlignment="Left" Margin="20,52,0,0" VerticalAlignment="Top" Height="26" Width="69"/>
        <Label Content="Txn/Chk No" HorizontalAlignment="Left" Margin="262,125,0,0" VerticalAlignment="Top" Height="26" Width="78"/>
        <Label Content="Ag. Type" HorizontalAlignment="Left" Margin="21,88,0,0" VerticalAlignment="Top" Height="26" Width="86"/>
        <TextBox x:Name="txtReceiptNo" HorizontalAlignment="Left" Height="23" Margin="94,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" IsReadOnly="True"/>
        <TextBox x:Name="txtChequeNoTxnId" HorizontalAlignment="Left" Height="23" Margin="338,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <RadioButton x:Name="rdoAgencyType_C" Content="Comm" HorizontalAlignment="Left" Margin="96,96,0,0" VerticalAlignment="Top" GroupName="AgencyType" IsChecked="True" Height="15" Width="63" Checked="rdoAgencyType_C_Checked"/>
        <RadioButton x:Name="rdoAgencyType_G" Content="Govt" HorizontalAlignment="Left" Margin="164,96,0,0" VerticalAlignment="Top" GroupName="AgencyType" Height="15" Width="64" Checked="rdoAgencyType_G_Checked"/>
        <Label Content="Create Payment Receipt" HorizontalAlignment="Left" Margin="55,5,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Height="31" Width="199"/>
        <Image HorizontalAlignment="Left" Height="29" Margin="16,5,0,0" VerticalAlignment="Top" Width="31" Source="Resources/receipt.png"/>
        <Label Content="District" HorizontalAlignment="Left" Margin="502,50,0,0" VerticalAlignment="Top" Height="26" Width="47"/>
        <ComboBox x:Name="drpDistrictList" HorizontalAlignment="Left" Margin="581,50,0,0" VerticalAlignment="Top" Width="149" SelectionChanged="drpDistrictList_SelectionChanged" Height="22"/>
        <Label Content="Location" HorizontalAlignment="Left" Margin="737,50,0,0" VerticalAlignment="Top" Height="26" Width="55"/>
        <ComboBox x:Name="drpLocationList" HorizontalAlignment="Left" Margin="800,50,0,0" VerticalAlignment="Top" Width="168" Height="22" SelectionChanged="drpLocationList_SelectionChanged"/>
        <Label Content="Client" HorizontalAlignment="Left" Margin="503,88,0,0" VerticalAlignment="Top" Height="26" Width="73"/>
        <TextBox x:Name="txtClientName" HorizontalAlignment="Left" Height="23" Margin="581,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="387"/>
        <Label Content="Txn/Chk Bank" HorizontalAlignment="Left" Margin="710,120,0,0" VerticalAlignment="Top" Height="26" Width="90"/>
        <TextBox x:Name="txtChequeTxnBank" HorizontalAlignment="Left" Height="23" Margin="805,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="163"/>
        <Label Content="Amount" HorizontalAlignment="Left" Margin="21,163,0,0" VerticalAlignment="Top" Height="26" Width="60"/>
        <TextBox x:Name="txtAmount" HorizontalAlignment="Left" Height="23" Margin="94,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" PreviewTextInput="txtAmount_PreviewTextInput"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="879,202,0,0" VerticalAlignment="Top" Width="89" Height="28" FontWeight="Bold" Click="btnSave_Click"/>
        <TextBox x:Name="txtPK_hidden" HorizontalAlignment="Left" Height="23" Margin="952,51,-3,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="41" Visibility="Hidden"/>
        <Label Content="Invoice Date" HorizontalAlignment="Left" Margin="262,50,0,0" VerticalAlignment="Top" Height="26" Width="76"/>
        <DatePicker x:Name="dpkrReceiptDate" HorizontalAlignment="Left" Margin="338,52,0,0" VerticalAlignment="Top" Width="159" Height="24"/>
        <Label Content="Agency" HorizontalAlignment="Left" Margin="264,88,0,0" VerticalAlignment="Top" Height="26" Width="55"/>
        <ComboBox x:Name="drpAgencyList" HorizontalAlignment="Left" Margin="338,92,0,0" VerticalAlignment="Top" Width="160" Height="22"/>
        <Label Content="Pay Mode" HorizontalAlignment="Left" Margin="19,124,0,0" VerticalAlignment="Top" Height="26" Width="66"/>
        <ComboBox x:Name="drpPymentMode" HorizontalAlignment="Left" Margin="94,127,0,0" VerticalAlignment="Top" Width="160" Height="22"/>
        <Label Content="Remark" HorizontalAlignment="Left" Margin="264,163,0,0" VerticalAlignment="Top" Height="26" Width="69"/>
        <TextBox x:Name="txtRemark" HorizontalAlignment="Left" Height="23" Margin="338,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="630"/>
        <DataGrid x:Name="grdInvoiceList" Margin="6,244,10,4" IsTextSearchEnabled="True" ColumnHeaderHeight="25" AlternatingRowBackground="#FFEEEAEA" ColumnWidth="*" IsReadOnly="True"/>
        <Label Content="Txn/Chk Date" HorizontalAlignment="Left" Margin="500,121,0,0" VerticalAlignment="Top" Height="26" Width="90"/>
        <DatePicker x:Name="dpkrChequeTxnDate" HorizontalAlignment="Left" Margin="582,123,0,0" VerticalAlignment="Top" Width="114" Height="24"/>
        <Button x:Name="btnNew" Content="New/Reset Form" HorizontalAlignment="Left" Margin="710,202,0,0" VerticalAlignment="Top" Width="125" Height="28" FontWeight="Bold" Click="btnNew_Click"/>
    </Grid>
</UserControl>
