<UserControl x:Class="ADVT_ERP.CreditNote"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADVT_ERP"
             mc:Ignorable="d" 
             d:DesignHeight="570" d:DesignWidth="990" Width="990" Height="570">
    <Grid Background="#FFF9F9F9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Ag. Type" HorizontalAlignment="Left" Margin="539,99,0,0" VerticalAlignment="Top" Height="26" Width="61"/>
        <RadioButton x:Name="rdoAgencyType_C" Content="Comm" HorizontalAlignment="Left" Margin="605,105,0,0" VerticalAlignment="Top" GroupName="AgencyType" IsChecked="True" Height="15" Width="63" Checked="rdoAgencyType_C_Checked" TabIndex="7"/>
        <RadioButton x:Name="rdoAgencyType_G" Content="Govt" HorizontalAlignment="Left" Margin="673,105,0,0" VerticalAlignment="Top" GroupName="AgencyType" Height="15" Width="64" Checked="rdoAgencyType_G_Checked" TabIndex="8"/>
        <Label Content="Credit Note" HorizontalAlignment="Left" Margin="55,5,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Height="31" Width="170"/>
        <Image HorizontalAlignment="Left" Height="29" Margin="16,5,0,0" VerticalAlignment="Top" Width="31" Source="Resources/crnotes.png"/>
        <Label Content="District" HorizontalAlignment="Left" Margin="20,99,0,0" VerticalAlignment="Top" Height="26" Width="47"/>
        <ComboBox x:Name="drpDistrictList" HorizontalAlignment="Left" Margin="94,102,0,0" VerticalAlignment="Top" Width="159" SelectionChanged="drpDistrictList_SelectionChanged" Height="22" TabIndex="5"/>
        <Label Content="Location" HorizontalAlignment="Left" Margin="262,98,0,0" VerticalAlignment="Top" Height="26" Width="55"/>
        <ComboBox x:Name="drpLocationList" HorizontalAlignment="Left" Margin="338,99,0,0" VerticalAlignment="Top" Width="185" Height="22" SelectionChanged="drpLocationList_SelectionChanged" TabIndex="6"/>
        <TextBox x:Name="txtPK_hidden" HorizontalAlignment="Left" Height="23" Margin="952,51,-3,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="41" Visibility="Hidden"/>
        <Label Content="Agency" HorizontalAlignment="Left" Margin="751,98,0,0" VerticalAlignment="Top" Height="26" Width="55"/>
        <ComboBox x:Name="drpAgencyList" HorizontalAlignment="Left" Margin="812,102,0,0" VerticalAlignment="Top" Width="168" Height="22" TabIndex="9"/>
        <DataGrid x:Name="grdCrNoteList" Margin="6,191,10,4" IsTextSearchEnabled="True" ColumnHeaderHeight="25" AlternatingRowBackground="#FFEEEAEA" ColumnWidth="*" IsReadOnly="True" />


        <TextBox x:Name="txtAmount" HorizontalAlignment="Left" Height="23" Margin="812,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164"/>
        <Label Content="Amount" HorizontalAlignment="Left" Margin="749,52,0,0" VerticalAlignment="Top" Height="26" Width="57"/>
        <Label Content="Purpose" HorizontalAlignment="Left" Margin="529,52,0,0" VerticalAlignment="Top" Height="26" Width="55"/>
        <ComboBox x:Name="drpPurposeList" HorizontalAlignment="Left" Margin="589,54,0,0" VerticalAlignment="Top" Width="148" Height="22" SelectionChanged="drpLocationList_SelectionChanged" TabIndex="6"/>
        <TextBox x:Name="txtRemark" HorizontalAlignment="Left" Height="23" Margin="94,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="712"/>
        <Label Content="Remark" HorizontalAlignment="Left" Margin="20,145,0,0" VerticalAlignment="Top" Height="26" Width="57"/>
        <Button x:Name="btnCreteCreditNote" Content="Create Credit Note" HorizontalAlignment="Left" Margin="847,144,0,0" VerticalAlignment="Top" Width="129" Height="28" FontWeight="Bold" TabIndex="22" Click="btnCreteCreditNote_Click"/>
        <Label Content="Receipt No." HorizontalAlignment="Left" Margin="20,52,0,0" VerticalAlignment="Top" Height="26" Width="69"/>
        <TextBox x:Name="txtCrNoteNo" HorizontalAlignment="Left" Height="23" Margin="94,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" IsReadOnly="True"/>
        <Label Content="Invoice Date" HorizontalAlignment="Left" Margin="262,50,0,0" VerticalAlignment="Top" Height="26" Width="76"/>
        <DatePicker x:Name="dpkrCrNoteDate" HorizontalAlignment="Left" Margin="338,52,0,0" VerticalAlignment="Top" Width="185" Height="24"/>
    </Grid>
</UserControl>
