<UserControl x:Class="ADVT_ERP.DrCrOptionMaster"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADVT_ERP"
             mc:Ignorable="d" 
             d:DesignHeight="570" d:DesignWidth="990" Width="990" Height="570">
    <Grid Background="#FFF9F9F9">
        <DataGrid x:Name="grdOptionList" Margin="6,104,10,4" IsTextSearchEnabled="True" IsReadOnly="True" MouseDoubleClick="grdDistList_MouseDoubleClick" ColumnHeaderHeight="25" AlternatingRowBackground="#FFEEEAEA" ColumnWidth="*"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="790,54,0,0" VerticalAlignment="Top" Width="73" Height="28" Click="btnSave_Click" FontWeight="Bold" TabIndex="4"/>
        <TextBox x:Name="txtReson" HorizontalAlignment="Left" Height="23" Margin="256,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" TabIndex="1"/>
        <Label Content="Is Active" HorizontalAlignment="Left" Margin="591,55,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rdoIsActive_A" Content="Active" HorizontalAlignment="Left" Margin="656,61,0,0" VerticalAlignment="Top" GroupName="IsActive" IsChecked="True" TabIndex="2"/>
        <RadioButton x:Name="rdoIsActive_D" Content="Deactive" HorizontalAlignment="Left" Margin="718,61,0,0" VerticalAlignment="Top" GroupName="IsActive" TabIndex="3"/>
        <Label Content="Manage District" HorizontalAlignment="Left" Margin="50,8,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="btnNew" Content="New" HorizontalAlignment="Left" Margin="885,55,0,0" VerticalAlignment="Top" Width="73" Height="28" FontWeight="Bold" Click="btnNew_Click" TabIndex="5"/>
        <TextBox x:Name="txtPK_hidden" HorizontalAlignment="Left" Height="23" Margin="917,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="41" Visibility="Hidden"/>
        <Label Content="Option Text" HorizontalAlignment="Left" Margin="180,53,0,0" VerticalAlignment="Top"/>
        <Image HorizontalAlignment="Left" Height="36" Margin="10,4,0,0" VerticalAlignment="Top" Width="39" Source="Resources/district.png"/>
        <ComboBox x:Name="drpResonFor" HorizontalAlignment="Left" Margin="42,55,0,0" VerticalAlignment="Top" Width="118" Height="22"/>
        <Label Content="For" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
