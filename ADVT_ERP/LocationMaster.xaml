<UserControl x:Class="ADVT_ERP.LocationMaster"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADVT_ERP"
             mc:Ignorable="d" 
             d:DesignHeight="570" d:DesignWidth="990" Width="990" Height="570">
    <Grid Background="#FFF9F9F9">
        <DataGrid x:Name="grdLocationList" Margin="6,122,4,4" IsTextSearchEnabled="True" IsReadOnly="True" MouseDoubleClick="grdLocationList_MouseDoubleClick" ColumnHeaderHeight="25" AlternatingRowBackground="#FFEEEAEA" ColumnWidth="*"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="559,79,0,0" VerticalAlignment="Top" Width="80" Height="28" Click="btnSave_Click" TabIndex="5"/>
        <Label Content="Location" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top"/>
        <Label Content="District" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top"/>
        <Label Content="Is Active" HorizontalAlignment="Left" Margin="559,44,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="drpDistrictList" HorizontalAlignment="Left" Margin="68,50,0,0" VerticalAlignment="Top" Width="463" TabIndex="1"/>
        <TextBox x:Name="txtLocationName" HorizontalAlignment="Left" Height="23" Margin="68,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="463" TabIndex="4"/>
        <RadioButton x:Name="rdoIsActive_A" Content="Active" HorizontalAlignment="Left" Margin="628,50,0,0" VerticalAlignment="Top" IsChecked="True" GroupName="IsActive" TabIndex="2"/>
        <RadioButton x:Name="rdoIsActive_D" Content="Deactive" HorizontalAlignment="Left" Margin="688,50,0,0" VerticalAlignment="Top" GroupName="IsActive" TabIndex="3"/>
        <Label Content="Manage Location" HorizontalAlignment="Left" Margin="49,4,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="btnNew" Content="New" HorizontalAlignment="Left" Margin="672,79,0,0" VerticalAlignment="Top" Width="80" Height="28" Click="btnNew_Click" TabIndex="6"/>
        <TextBox x:Name="txtPK_hidden" HorizontalAlignment="Left" Height="23" Margin="917,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="41" Visibility="Hidden"/>
        <Image HorizontalAlignment="Left" Height="36" Margin="10,4,0,0" VerticalAlignment="Top" Width="39" Source="Resources/location.png"/>
    </Grid>
</UserControl>
