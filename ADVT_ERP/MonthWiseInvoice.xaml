<UserControl x:Class="ADVT_ERP.MonthWiseInvoice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADVT_ERP"
             mc:Ignorable="d" 
             d:DesignHeight="570" d:DesignWidth="990" Width="990" Height="570">
    <Grid Background="#FFF9F9F9">
        <Label Content="Month Wise Invoice" HorizontalAlignment="Left" Margin="55,5,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Height="31" Width="170"/>
        <Image HorizontalAlignment="Left" Height="29" Margin="16,5,0,0" VerticalAlignment="Top" Width="31" Source="Resources/dailyreport.png"/>
        <Button x:Name="btnApplyFilter" Content="Apply Filter" HorizontalAlignment="Left" Margin="374,49,0,0" VerticalAlignment="Top" Width="107" Height="28" FontWeight="Bold" Click="btnApplyFilter_Click" TabIndex="22"/>
        <DataGrid x:Name="grdInvoiceList" Margin="6,99,10,4" IsTextSearchEnabled="True" ColumnHeaderHeight="25" AlternatingRowBackground="#FFEEEAEA" ColumnWidth="*" IsReadOnly="True" />
        <Button x:Name="btnExport" Content="Export" HorizontalAlignment="Left" Margin="500,49,0,0" VerticalAlignment="Top" Width="88" Height="28" FontWeight="Bold" TabIndex="22" Click="btnExport_Click"/>
        <Label Content="Year" HorizontalAlignment="Left" Margin="12,51,0,0" VerticalAlignment="Top" Height="26" Width="55"/>
        <ComboBox x:Name="drpFyears" HorizontalAlignment="Left" Margin="88,52,0,0" VerticalAlignment="Top" Width="245" Height="22" TabIndex="9"/>
    </Grid>
</UserControl>
