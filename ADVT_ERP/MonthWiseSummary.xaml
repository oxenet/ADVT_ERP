<UserControl x:Class="ADVT_ERP.MonthWiseSummary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADVT_ERP"
             mc:Ignorable="d" 
             d:DesignHeight="570" d:DesignWidth="990" Width="990" Height="570">
    <Grid Background="#FFF9F9F9">
        <Label Content="Ag. Type" HorizontalAlignment="Left" Margin="766,37,0,0" VerticalAlignment="Top" Height="26" Width="61"/>
        <RadioButton x:Name="rdoAgencyType_C" Content="Comm" HorizontalAlignment="Left" Margin="841,42,0,0" VerticalAlignment="Top" GroupName="AgencyType" IsChecked="True" Height="15" Width="63" Checked="rdoAgencyType_C_Checked" TabIndex="7"/>
        <RadioButton x:Name="rdoAgencyType_G" Content="Govt" HorizontalAlignment="Left" Margin="909,42,0,0" VerticalAlignment="Top" GroupName="AgencyType" Height="15" Width="64" Checked="rdoAgencyType_G_Checked" TabIndex="8"/>
        <Label Content="Month Wise Bill Report" HorizontalAlignment="Left" Margin="55,5,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Height="31" Width="201"/>
        <Image HorizontalAlignment="Left" Height="29" Margin="16,5,0,0" VerticalAlignment="Top" Width="31" Source="Resources/dailyreport.png"/>
        <Label Content="District" HorizontalAlignment="Left" Margin="17,41,0,0" VerticalAlignment="Top" Height="26" Width="47"/>
        <ComboBox x:Name="drpDistrictList" HorizontalAlignment="Left" Margin="87,45,0,0" VerticalAlignment="Top" Width="254" SelectionChanged="drpDistrictList_SelectionChanged" Height="22" TabIndex="5"/>
        <Label Content="Location" HorizontalAlignment="Left" Margin="404,37,0,0" VerticalAlignment="Top" Height="26" Width="55" RenderTransformOrigin="1.182,-1.308"/>
        <ComboBox x:Name="drpLocationList" HorizontalAlignment="Left" Margin="480,41,0,0" VerticalAlignment="Top" Width="245" Height="22" SelectionChanged="drpLocationList_SelectionChanged" TabIndex="6"/>
        <Button x:Name="btnApplyFilter" Content="Apply Filter" HorizontalAlignment="Left" Margin="766,78,0,0" VerticalAlignment="Top" Width="107" Height="28" FontWeight="Bold" Click="btnApplyFilter_Click" TabIndex="22"/>
        <DataGrid x:Name="grdInvoiceList" Margin="6,127,10,4" IsTextSearchEnabled="True" ColumnHeaderHeight="25" AlternatingRowBackground="#FFEEEAEA" ColumnWidth="*" IsReadOnly="True" />
        <Button x:Name="btnExport" Content="Export" HorizontalAlignment="Left" Margin="892,78,0,0" VerticalAlignment="Top" Width="88" Height="28" FontWeight="Bold" TabIndex="22" Click="btnExport_Click"/>
        <Label Content="Agency" HorizontalAlignment="Left" Margin="17,79,0,0" VerticalAlignment="Top" Height="26" Width="55"/>
        <ComboBox x:Name="drpAgencyList" HorizontalAlignment="Left" Margin="87,82,0,0" VerticalAlignment="Top" Width="254" Height="22" TabIndex="9"/>
        <Label Content="Year" HorizontalAlignment="Left" Margin="404,80,0,0" VerticalAlignment="Top" Height="26" Width="55"/>
        <ComboBox x:Name="drpFyears" HorizontalAlignment="Left" Margin="480,81,0,0" VerticalAlignment="Top" Width="245" Height="22" TabIndex="9"/>
    </Grid>
</UserControl>
