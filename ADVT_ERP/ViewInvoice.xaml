<Window x:Class="ADVT_ERP.ViewInvoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADVT_ERP"
        mc:Ignorable="d"
        Title="Invoice" Height="600" Width="1000" ResizeMode="NoResize">
    <ScrollViewer>
        <Grid Name="ToBePrint">            
            <FlowDocumentReader UseLayoutRounding="True" SnapsToDevicePixels="True">
                <FlowDocumentReader.Resources>
                    <Style TargetType="TableCell">
                        <Setter Property="TextAlignment" Value="Left"/>
                        <Setter Property="Padding" Value="2"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontFamily" Value="Verdana"/>
                        <Setter Property="LineHeight" Value="25"/>
                    </Style>
                </FlowDocumentReader.Resources>
                <FlowDocument ColumnWidth="9999999">
                    <Section Name="not_print">
                        <Paragraph>
                            <Button Name="btnPrintInvoice" Content="Print Invoice" Click="btnPrintInvoice_Click" Padding="10,3" />
                        </Paragraph>
                    </Section>
                    <Section>
                        <Table CellSpacing="0" Padding="75,5,5,5">
                        <Table.Columns>
                            <TableColumn/>
                            <TableColumn/>
                            <TableColumn/>
                            <TableColumn/>
                        </Table.Columns>
                        <TableRowGroup>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1" ColumnSpan="4">
                                    <Paragraph FontWeight="Bold" TextAlignment="Center" FontSize="16">
                                        Tax Invoice
                                    </Paragraph>
                                </TableCell>
                            </TableRow>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1,0,1,1">
                                    <Paragraph FontWeight="Bold">
                                            <Image Name="imgLogo" Source="Resources/company-profile.png" Height="150" Width="184"></Image>
                                    </Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1" ColumnSpan="3">
                                    <Paragraph Padding="5">
                                            <Bold Name="CompanyName" FontSize="25"></Bold>
                                        <LineBreak/>
                                            <Bold Name="CompanyAddress"></Bold>
                                        <LineBreak/>
                                            <Bold Name="CompanyContacts"></Bold>
                                    </Paragraph>
                                </TableCell>
                            </TableRow>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1,0,1,1">
                                    <Paragraph>DAVP Code :
                                            <Bold Name="DAVPCode"></Bold>
                                    </Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                    <Paragraph>DPR Code :
                                            <Bold Name="DPRCode"></Bold>
                                    </Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                    <Paragraph>PAN :
                                            <Bold Name="PAN"></Bold>
                                    </Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                    <Paragraph>GSTN :
                                            <Bold Name="GSTN"></Bold>
                                    </Paragraph>
                                </TableCell>
                            </TableRow>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1" ColumnSpan="4">
                                    <Paragraph FontWeight="Bold" TextAlignment="Center" FontSize="18">
                                        <LineBreak/>
                                    </Paragraph>
                                </TableCell>
                            </TableRow>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1,0,1,1">
                                    <Paragraph>Agency Name</Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                        <Paragraph FontWeight="Bold" Name="AgencyName"></Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                    <Paragraph>Invoice No</Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                        <Paragraph FontWeight="Bold" Name="InvoiceNum"></Paragraph>
                                </TableCell>
                            </TableRow>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1,0,1,1">
                                    <Paragraph>Client Name</Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                        <Paragraph FontWeight="Bold" Name="ClientName"></Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                    <Paragraph>Invoice Date</Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                        <Paragraph FontWeight="Bold" Name="InvoiceDate"></Paragraph>
                                </TableCell>
                            </TableRow>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1,0,1,1">
                                    <Paragraph>Location</Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                        <Paragraph FontWeight="Bold" Name="LocationName"></Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                    <Paragraph>RO Number</Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                        <Paragraph FontWeight="Bold" Name="RONum"></Paragraph>
                                </TableCell>
                            </TableRow>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1,0,1,1">
                                    <Paragraph>GSTN</Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                        <Paragraph FontWeight="Bold" Name="AgencyGSTN"></Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                    <Paragraph>Publish Date</Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                        <Paragraph FontWeight="Bold" Name="PublishDate"></Paragraph>
                                </TableCell>
                            </TableRow>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1" ColumnSpan="4">
                                    <Table CellSpacing="0">
                                        <Table.Columns>
                                            <TableColumn/>
                                            <TableColumn/>
                                            <TableColumn/>
                                            <TableColumn/>
                                            <TableColumn/>
                                            <TableColumn/>
                                            <TableColumn/>
                                        </Table.Columns>
                                        <TableRowGroup>
                                            <TableRow>
                                                <TableCell BorderBrush="Black" BorderThickness="1,1,1,1">
                                                    <Paragraph FontWeight="Bold" TextAlignment="Center">Package</Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,1,1,1">
                                                        <Paragraph FontWeight="Bold" TextAlignment="Center">Width</Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,1,1,1">
                                                        <Paragraph FontWeight="Bold" TextAlignment="Center">Height</Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,1,1,1">
                                                        <Paragraph FontWeight="Bold" TextAlignment="Center">Area</Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,1,1,1">
                                                        <Paragraph FontWeight="Bold" TextAlignment="Center">Colour/BW</Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,1,1,1">
                                                        <Paragraph FontWeight="Bold" TextAlignment="Center">Rate</Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,1,1,1">
                                                        <Paragraph FontWeight="Bold" TextAlignment="Center">Amount</Paragraph>
                                                </TableCell>
                                            </TableRow>
                                            <TableRow>
                                                <TableCell BorderBrush="Black" BorderThickness="1,0,1,1">
                                                        <Paragraph Name="PackageName"></Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                                        <Paragraph Name="AdWidth" TextAlignment="Center"></Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                                        <Paragraph Name="AdHeight" TextAlignment="Center"></Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                                        <Paragraph Name="AdSpace" TextAlignment="Center"></Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                                        <Paragraph TextAlignment="Center" Name="ColourScheme"></Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                                        <Paragraph Name="Rate" TextAlignment="Center"></Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                                        <Paragraph Name="Amount" TextAlignment="Right"></Paragraph>
                                                </TableCell>
                                            </TableRow>
                                            <TableRow>
                                                <TableCell BorderBrush="Black" BorderThickness="1,0,1,1" ColumnSpan="4">
                                                        <Paragraph Name="Remark"></Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1" ColumnSpan="2">
                                                    <Paragraph>Agrred Amount</Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                                        <Paragraph Name="AgreedAmount" TextAlignment="Right"></Paragraph>
                                                </TableCell>                                                
                                            </TableRow>
                                            <TableRow>
                                                <TableCell BorderBrush="Black" BorderThickness="1,0,1,1" ColumnSpan="4" RowSpan="4">
                                                        <Paragraph Name="AmountWord"></Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1" ColumnSpan="2">
                                                    <Paragraph>CGST</Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                                        <Paragraph Name="CGST" TextAlignment="Right"></Paragraph>
                                                </TableCell>
                                            </TableRow>
                                            <TableRow>                                                
                                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1" ColumnSpan="2">
                                                    <Paragraph>SGST</Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                                        <Paragraph Name="SGST" TextAlignment="Right"></Paragraph>
                                                </TableCell>
                                            </TableRow>
                                            <TableRow>
                                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1" ColumnSpan="2">
                                                    <Paragraph>IGST</Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                                        <Paragraph TextAlignment="Right">0.00</Paragraph>
                                                </TableCell>
                                            </TableRow>
                                            <TableRow>
                                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1" ColumnSpan="2">
                                                    <Paragraph>Total Invoice Value</Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1">
                                                        <Paragraph Name="NetAmount" TextAlignment="Right"></Paragraph>
                                                </TableCell>
                                            </TableRow>
                                        </TableRowGroup>
                                    </Table>
                                </TableCell>
                            </TableRow>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1,0,1,1" ColumnSpan="4">
                                    <Paragraph>
                                        <LineBreak/>
                                    </Paragraph>
                                </TableCell>
                            </TableRow>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1,0,1,1">
                                    <Paragraph>A/C Name</Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1" ColumnSpan="2">
                                        <Paragraph FontWeight="Bold" Name="ACHolder"></Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1" RowSpan="5" TextAlignment="Center">
                                        <Paragraph FontWeight="Bold">
                                            <LineBreak></LineBreak>
                                            <LineBreak></LineBreak>
                                            <LineBreak></LineBreak>
                                            <LineBreak></LineBreak>
                                            For:<Bold Name="CompanyNameSeal"></Bold>
                                            <LineBreak></LineBreak>Seal/Signature
                                        </Paragraph>
                                </TableCell>
                            </TableRow>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1,0,1,1">
                                    <Paragraph>Bank Name</Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1" ColumnSpan="2">
                                        <Paragraph FontWeight="Bold" Name="BankName"></Paragraph>
                                </TableCell>
                            </TableRow>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1,0,1,1">
                                    <Paragraph>IFSC</Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1" ColumnSpan="2">
                                        <Paragraph FontWeight="Bold" Name="IFSC"></Paragraph>
                                </TableCell>
                            </TableRow>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1,0,1,1">
                                    <Paragraph>A/C Number</Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1" ColumnSpan="2">
                                        <Paragraph FontWeight="Bold" Name="ACNum"></Paragraph>
                                </TableCell>
                            </TableRow>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1,0,1,1">
                                    <Paragraph>Bank Branch</Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="0,0,1,1" ColumnSpan="2">
                                        <Paragraph FontWeight="Bold" Name="BankBranch"></Paragraph>
                                </TableCell>
                            </TableRow>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1,0,1,1" ColumnSpan="4">
                                    <Paragraph FontWeight="Bold" TextAlignment="Center" FontSize="15">
                                        Thank You For Advertising With Us
                                    </Paragraph>
                                </TableCell>
                            </TableRow>
                        </TableRowGroup>
                    </Table>
                    </Section>
                </FlowDocument>
            </FlowDocumentReader>
        </Grid>
    </ScrollViewer>
</Window>
